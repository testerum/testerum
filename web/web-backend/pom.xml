    <build>
        <sourceDirectory>src/main/kotlin</sourceDirectory>
        <testSourceDirectory>src/test/kotlin</testSourceDirectory>

        <plugins>
            <!-- Kotlin -->
            <plugin>
                <artifactId>kotlin-maven-plugin</artifactId>
                <groupId>org.jetbrains.kotlin</groupId>
            </plugin>

            <!-- Maven Compiler -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>

            <!-- Surefire -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
            </plugin>
        </plugins>
    </build>


    <profiles>
        <!-- development -->
        <profile>
            <id>development</id>

            <!--
                Activated by the lack of the "production" system property.
                This means a developer doesn't have to do anything to activate the development profile.
                On the Jenkins server, adding "-Dproduction" parameter to the build is a one-time job.
            -->
            <activation>
                <property>
                    <name>!production</name>
                </property>
            </activation>

            <dependencies>
                <!-- basic steps -->
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>assertion-steps</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>debug-steps</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>http-steps</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>json-steps</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>rdbms-steps</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>selenium-steps</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>android-steps</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>util-steps</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>vars-steps</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>test-steps</artifactId>
                </dependency>
            </dependencies>
        </profile>

        <!-- production -->
        <profile>
            <id>production</id>

            <!-- activated by the presence of the "production" system property -->
            <activation>
                <property>
                    <name>production</name>
                </property>
            </activation>

            <dependencies>
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>web-frontend</artifactId>
                    <classifier>dist</classifier>
                </dependency>
            </dependencies>

            <build>
                <plugins>
                    <!-- maven-assembly-plugin (create final dist file) -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>package</phase>

                                <goals>
                                    <goal>single</goal>
                                </goals>

                                <configuration>
                                    <appendAssemblyId>true</appendAssemblyId>
                                    <descriptors>
                                        <descriptor>${basedir}/src/main/assembly/assembly-descriptor.xml</descriptor>
                                    </descriptors>
                                    <attach>true</attach>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
