<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>steps</artifactId>
        <groupId>com.testerum</groupId>
        <version>3.7.7</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>http-steps</artifactId>


    <dependencies>
        <!--==================== Internal Dependencies ====================-->

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-json-diff</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-json</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>model</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>step-transformer-utils</artifactId>
        </dependency>


        <!--==================== testerum dependencies ====================-->

        <!-- testerum-steps-api -->
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>testerum-steps-api</artifactId>
        </dependency>


        <!--==================== External Dependencies ====================-->

        <!-- Kotlin -->
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-stdlib-jdk8</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-reflect</artifactId>
        </dependency>

        <!-- common-httpclient -->
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-httpclient</artifactId>
        </dependency>

        <!-- wiremock-standalone -->
        <dependency>
            <groupId>com.github.tomakehurst</groupId>
            <artifactId>wiremock-standalone</artifactId>
        </dependency>

    </dependencies>


    <build>
        <sourceDirectory>src/main/kotlin</sourceDirectory>

        <plugins>
            <!-- Kotlin -->
            <plugin>
                <artifactId>kotlin-maven-plugin</artifactId>
                <groupId>org.jetbrains.kotlin</groupId>
            </plugin>
        </plugins>
    </build>


    <profiles>
        <!-- development -->
        <profile>
            <id>development</id>

            <!-- activated by the absence of the "production" system property -->
            <activation>
                <property>
                    <name>!production</name>
                </property>
            </activation>

            <build>
                <plugins>
                    <!-- copy dependencies to "package/basic_steps" directory -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>

                        <configuration>
                            <outputDirectory>${project.basedir}/../../package/basic_steps</outputDirectory>
                            <includeScope>runtime</includeScope>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
