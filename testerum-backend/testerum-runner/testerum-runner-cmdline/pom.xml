<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>testerum-runner</artifactId>
        <groupId>com.testerum</groupId>
        <version>3.3.3</version>
    </parent>

    <artifactId>testerum-runner-cmdline</artifactId>
    <packaging>jar</packaging>


    <properties>
        <mainClass>com.testerum.runner_cmdline.TesterumRunner</mainClass>

        <packageDir>${project.basedir}/../../../package</packageDir>
    </properties>

    <dependencies>
        <!--==================== Internal Dependencies ====================-->

        <!-- report generators -->
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>report-generators</artifactId>
        </dependency>

        <!-- common-di -->
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-di</artifactId>
        </dependency>

        <!-- common-kotlin -->
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-kotlin</artifactId>
        </dependency>

        <!-- common-cmdline -->
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-cmdline</artifactId>
        </dependency>

        <!-- common-expression-evaluator -->
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-expression-evaluator</artifactId>
        </dependency>

        <!-- common-rdbms -->
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-rdbms</artifactId>
        </dependency>

        <!-- testerum-runner-api -->
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>testerum-runner-api</artifactId>
        </dependency>

        <!-- model -->
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>model</artifactId>
        </dependency>

        <!-- settings -->
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>settings</artifactId>
        </dependency>

        <!-- testerum-scanner -->
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>testerum-scanner</artifactId>
        </dependency>

        <!-- file-service -->
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>file-service</artifactId>
        </dependency>

        <!-- project-manager -->
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>project-manager</artifactId>
        </dependency>

        <!-- common-json -->
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-json</artifactId>
        </dependency>

        <!-- common-jdk -->
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-jdk</artifactId>
        </dependency>

        <!--==================== External Dependencies ====================-->

        <!-- logging -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
        </dependency>

        <!-- Kotlin -->
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-reflect</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-stdlib-jdk8</artifactId>
        </dependency>

        <!-- Kotlin Jackson integration-->
        <dependency>
            <groupId>com.fasterxml.jackson.module</groupId>
            <artifactId>jackson-module-kotlin</artifactId>
        </dependency>
        <!-- Json -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.datatype</groupId>
            <artifactId>jackson-datatype-jsr310</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.datatype</groupId>
            <artifactId>jackson-datatype-guava</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.module</groupId>
            <artifactId>jackson-module-afterburner</artifactId>
        </dependency>

        <!-- slf4j -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jcl-over-slf4j</artifactId>
        </dependency>

        <!-- Apache Commons -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>

        <!-- jansi -->
        <dependency>
            <groupId>org.fusesource.jansi</groupId>
            <artifactId>jansi</artifactId>
        </dependency>

        <!-- picocli: command line args parser -->
        <dependency>
            <groupId>info.picocli</groupId>
            <artifactId>picocli</artifactId>
        </dependency>

        <!--==================== test dependencies ====================-->

        <!-- JUnit 5 -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-params</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.platform</groupId>
            <artifactId>junit-platform-launcher</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- java-hamcrest -->
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>java-hamcrest</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <sourceDirectory>src/main/kotlin</sourceDirectory>

        <plugins>
            <!-- Kotlin -->
            <plugin>
                <artifactId>kotlin-maven-plugin</artifactId>
                <groupId>org.jetbrains.kotlin</groupId>
            </plugin>
        </plugins>
    </build>


    <profiles>
        <!-- production -->
        <profile>
            <id>production</id>

            <!-- activated by the presence of the "production" system property -->
            <activation>
                <property>
                    <name>production</name>
                </property>
            </activation>

            <build>
                <plugins>
                    <!-- delete dist/ nodejs directories to make sure we rebuild -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-clean-plugin</artifactId>

                        <configuration>
                            <filesets>
                                <!-- extracted node -->
                                <fileset>
                                    <directory>${project.basedir}/src/main/assembly/node/windows/</directory>
                                </fileset>
                                <fileset>
                                    <directory>${project.basedir}/src/main/assembly/node/mac/</directory>
                                </fileset>
                                <fileset>
                                    <directory>${project.basedir}/src/main/assembly/node/linux/</directory>
                                </fileset>

                                <!-- dist/ app directories-->
                                <fileset>
                                    <directory>${project.basedir}/src/main/assembly/report_templates/templates/pretty/app/dist/</directory>
                                </fileset>
                                <fileset>
                                    <directory>${project.basedir}/src/main/assembly/report_templates/templates/pretty/generator/dist/</directory>
                                </fileset>
                                <fileset>
                                    <directory>${project.basedir}/src/main/assembly/report_templates/templates/stats/app/dist/</directory>
                                </fileset>
                                <fileset>
                                    <directory>${project.basedir}/src/main/assembly/report_templates/templates/stats/generator/dist/</directory>
                                </fileset>
                            </filesets>
                        </configuration>
                    </plugin>

                    <!-- download nodejs & compile report apps -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>

                        <executions>
                            <!-- ant-main-prod -->
                            <execution>
                                <id>ant-main-prod</id>
                                <phase>prepare-package</phase>
                                <configuration>
                                    <target>
                                        <ant antfile="build.xml" target="main-prod" />
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- maven-assembly-plugin (create final dist file) -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>

                        <configuration>
                            <appendAssemblyId>true</appendAssemblyId>
                            <attach>true</attach>
                        </configuration>

                        <executions>
                            <!-- assemble-dist-linux -->
                            <execution>
                                <id>assemble-dist-linux</id>
                                <phase>package</phase>

                                <goals>
                                    <goal>single</goal>
                                </goals>

                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/assembly-descriptor-linux.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>

                            <!-- assemble-dist-mac -->
                            <execution>
                                <id>assemble-dist-mac</id>
                                <phase>package</phase>

                                <goals>
                                    <goal>single</goal>
                                </goals>

                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/assembly-descriptor-mac.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>

                            <!-- assemble-dist-windows -->
                            <execution>
                                <id>assemble-dist-windows</id>
                                <phase>package</phase>

                                <goals>
                                    <goal>single</goal>
                                </goals>

                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/assembly-descriptor-windows.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>

                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <!-- development -->
        <profile>
            <id>development</id>

            <!-- activated by the absence of the "production" system property -->
            <activation>
                <property>
                    <name>!production</name>
                </property>
            </activation>

            <dependencies>
                <!-- basic steps -->
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>assertion-steps</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>debug-steps</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>http-steps</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>json-steps</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>rdbms-steps</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>selenium-steps</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>util-steps</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.testerum</groupId>
                    <artifactId>vars-steps</artifactId>
                </dependency>
            </dependencies>

            <build>
                <plugins>
                    <!-- copy dependencies to "package/runner/lib" directory -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>

                        <configuration>
                            <outputDirectory>${packageDir}/runner/lib</outputDirectory>
                            <includeScope>runtime</includeScope>
                        </configuration>
                    </plugin>

                    <!-- download nodejs, compile report apps, copy to package directory; make runner shell script executable -->
                   <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>

                       <executions>
                           <!-- ant-main-dev -->
                           <execution>
                               <id>ant-main-dev</id>
                               <phase>prepare-package</phase>
                               <configuration>
                                   <target>
                                       <ant antfile="build.xml" target="main-dev" />
                                   </target>
                               </configuration>
                               <goals>
                                   <goal>run</goal>
                               </goals>
                           </execution>
                       </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
