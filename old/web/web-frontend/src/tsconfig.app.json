{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "types": [
        "node"
    ],
    "charset"                         : "utf8",
    "pretty"                          : true,
    "sourceMap"                       : true,
    "emitBOM"                         : false,
    "declaration"                     : false,
    "experimentalDecorators"          : true,
    "emitDecoratorMetadata"           : true,
    "forceConsistentCasingInFileNames": true,
    "locale"                          : "en-us",
    "newLine"                         : "lf",
    "allowUnreachableCode"            : false,
    "allowUnusedLabels"               : false,
    "noUnusedLocals"                  : false,
    "alwaysStrict"                    : true,
    //"strictNullChecks"                : true, // not supported yet with Angular
    "noEmitOnError"                   : true,
    "noFallthroughCasesInSwitch"      : true,
    "noImplicitAny"                   : false,
    "noImplicitReturns"               : true,
    "noImplicitThis"                  : true,
    "noStrictGenericChecks"           : false,
    "removeComments"                  : true
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
